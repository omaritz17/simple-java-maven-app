pipeline {
    agent {
        docker { image 'maven:3.9.2' } // Use Maven 3.9.2 or higher
    }
    stages {
        stage('Build') {
            steps {
                sh '''sed -i 's|<version>[3.9.2,)|<version>[3.8.7,)|g' pom.xml'''  // Adjust version range if needed
                sh 'cat pom.xml'  // Verify changes
                sh 'mvn -B -Denforcer.skip=true -DskipTests clean package'  // Skip Enforcer if needed
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
