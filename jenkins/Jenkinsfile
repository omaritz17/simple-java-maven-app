pipeline {
    agent any 
    stages {
        stage('Build') {
            steps {
                sh "sed -i 's/<version>3.9.2<\\/version>/<version>3.8.7<\\/version>/g' pom.xml"
                sh 'cat pom.xml'  // Debug POM changes
                sh 'mvn -B -DskipTests clean package'
                sh 'ls -l target'  // Verify JAR generation
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
